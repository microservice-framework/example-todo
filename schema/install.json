{
  "properties": {
    "mongo_url": {
      "type": "string",
      "description": "Mongo URL",
      "default": "mongodb://localhost:27017/",
      "required": true
    },
    "mongo_table": {
      "type": "string",
      "description": "Mongo Table",
      "default": "todo"
    },
    "mongo_database": {
      "type": "string",
      "description": "Mongo database",
      "default": "example"
    },
    "mongo_options": {
      "type": "string",
      "description": "Mongo Options (example: ?replicaSet=rs1&slaveOk=true)",
      "default": ""
    },
    "hostname": {
      "type": "string",
      "description": "IP or hostname of the server",
      "default": "127.0.0.1"
    },
    "port": {
      "type": "number",
      "description": "Port",
      "default": 15003,
      "required": true
    },
    "workers": {
      "type": "number",
      "description": "Number of workers",
      "default": 2,
      "required": true
    },
    "self_path": {
      "type": "string",
      "description": "SELF PATH",
      "default": "record",
      "required": true
    },
    "self_url": {
      "type": "string",
      "description": "SELF URL",
      "default": "http://localhost:15003/",
      "required": true
    },
    "router_url": {
      "type": "string",
      "description": "ROUTER URL ",
      "default": "http://localhost:3000",
      "required": true
    },
    "router_proxy_url": {
      "type": "string",
      "description": "ROUTER PROXY URL ",
      "default": "http://localhost:3100",
      "required": true
    },
    "router_secret": {
      "type": "string",
      "description": "ROUTER SECRET. Take it from microservice-router settings.",
      "default": "",
      "required": true
    },
    "router_period": {
      "type": "number",
      "description": "How often report to router (ms)",
      "default": 3000,
      "required": true
    },
    "scope": {
      "type": "string",
      "description": "Scope",
      "default": "record",
      "required": true
    },
    "schema": {
      "type": "string",
      "description": "Do not change",
      "default": "todo.json",
      "required": true
    }
  }
}
